<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ContactEditActivity"
    android:background="@color/material_dynamic_neutral95"
    
    >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        
        <ImageView
            android:id="@+id/idIVContact"
            android:layout_gravity="center"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_marginTop="25dp"
            app:srcCompat="@drawable/ic_launcher_background"
            />
        
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:orientation="horizontal"
            android:background="@color/white"
            >
            
            <ImageView
                android:id="@+id/personIV"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/baseline_person_red_500_24dp"
                android:padding="5dp"
                android:layout_margin="5dp"
                
                />
            
            <EditText
                android:id="@+id/idEdtName"
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:hint="연락처 이름이 적히는 곳입니다."
                android:background="@null"
                />
        </LinearLayout >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            
            >
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal"
                >
                
                <ImageView
                    android:id="@+id/phoneIV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/baseline_phone_red_400_24dp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    
                    />
                
                <EditText
                    android:id="@+id/idEdtPhoneNumber"
                    android:inputType="phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:hint="연락처 번호가 적히는 곳입니다."
                    android:background="@null"
                    />
            
            </LinearLayout >
        
        
        </LinearLayout >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            >
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal"
                >
                
                <ImageView
                    android:id="@+id/idEmailIV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/outline_email_indigo_a400_24dp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    />
                
                <EditText
                    android:id="@+id/idEdtEmail"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:hint="이메일"
                    android:background="@null"
                    />
            
            </LinearLayout >
        
        
        </LinearLayout >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginTop="10dp"
            
            >
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal"
                >
                
                <ImageView
                    android:id="@+id/idGroupIV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@drawable/outline_group_indigo_a400_24dp"
                    android:padding="5dp"
                    android:layout_margin="5dp"
                    
                    />
                
                <EditText
                    android:id="@+id/idEdtGroup"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:hint="그룹"
                    android:background="@null"
                    />
            </LinearLayout >
        
        
        </LinearLayout >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
        
        
        </LinearLayout >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            
            >
            
            <Button
                android:id="@+id/idBtnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"
                android:textSize="18sp"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                />
            
            <Button
                android:id="@+id/idBtnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장"
                android:textSize="18sp"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                />
        
        </LinearLayout >
    </LinearLayout >


</FrameLayout >